<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<addon id="script.logscanner"
       name="LogScanner"
       version="0.0.01"
       provider-name="KodeKarnage">
    <requires>
        <import addon="xbmc.python" version="2.1.0"/>
    </requires>

<extension point="xbmc.python.script"
            library="default.py">
            <provides>executable</provides>
    </extension>

    <extension point="xbmc.service" library="service.py" start="login"></extension>

    <extension point="xbmc.addon.metadata">
        <summary lang="en">LogScanner</summary>
        <description lang="en"></description>
        <language>en</language>
        <platform>all</platform>
        <license>GNU GENERAL PUBLIC LICENSE Version 3, 29 June 2007</license>
        <forum></forum>
        <website></website>
        <email>subliminal.karnage at gmail dot com</email>
        <source>https://github.com/KODeKarnage/script.logscanner/</source>
    </extension>
</addon>
